{
  "compilerOptions": {
    "outDir": "dist",
    "module": "ESNext",  // This will produce ESM output
    "target": "ES6",
    "declaration": true,
    "declarationMap": true,
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "include": ["src"],
  "exclude": ["node_modules"],
  }
